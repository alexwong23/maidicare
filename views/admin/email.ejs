<% if(message.length > 0) { %>
  <div class="erroralert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    <%= message %>
  </div>
<% } %>

<div class="middle admin-remove-navbar">
  <div class="bg-color">
    <div class="container">
      <div class="row">
        <div class="middle-box">
          <h3>Send an Email</h3>
          <hr>
          <form action="/admin/email" method="post">
            <div class="form-group">
              <label for="to">To</label>
              <input type="email" class="form-control" id="to" name="to" placeholder="recipient's email">
            </div>
            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject of email">
            </div>
            <div class="form-group">
              <label for="message">Message</label>
              <textarea type="text" class="form-control" id="message" name="message" placeholder="Message only, line breaks dont work" rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn-success middle-box-button">Send</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
