<div class="middle">
  <div class="bg-color">
    <div class="container">
      <div class="row">
        <div class="middle-box">
          <h2>Forgot Password</h2>
          <hr>
          <form class="ajax-forgotpassword" action="/password/forgot" method="post">
            <label for="email">Email</label>
            <div class="form-group inner-addon">
              <i class="left-addon glyphicon glyphicon-user"></i>
              <input type="email" class="form-control input-lg" id="email" name="email" placeholder="davidlee@gmail.com">
            </div>
            <button type="submit" class="btn btn-lg btn-info middle-box-button">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
